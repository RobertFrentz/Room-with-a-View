@inject Blazored.LocalStorage.ILocalStorageService localStorage

@code {

    public async Task<string> GetUsername()
    {
        return await localStorage.GetItemAsync<string>("username");
    }

    public async Task<bool> UserIsStaff()
    {
        return (await localStorage.GetItemAsync<string>("role")).Equals("Staff");
    }

    public async Task<bool> UserIsManager()
    {
        return (await localStorage.GetItemAsync<string>("role")).Equals("Admin");
    }

    public async Task ClearLocalStorage()
    {
        await localStorage.ClearAsync();
    }
}
